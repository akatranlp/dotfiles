#!/usr/bin/env bash

sourcens=$1
targetns=$2

secretname=$3
targetSecretName=$4

if [[ -z "$targetSecretName" ]]; then
	targetSecretName="$secretname"
fi

if [ -z "$sourcens" ] || [ -z "$targetns" ] || [ -z "$secretname" ]; then
	echo "Usage: $0 source-ns target-ns secretname"
	exit 1
fi

if ! kubectl get namespace "$sourcens" >/dev/null; then
	echo "source Namespace not available"
	exit 1
fi

if ! kubectl get namespace "$targetns" >/dev/null; then
	echo "target namespace not available, you want to create if? (y/n)"
	read char
	if [ "$char" == "y" ]; then
		kubectl create namespace "$targetns"
	else
		echo "Exiting..."
		exit 1
	fi
fi

export targetSecretName
kubectl -n "$sourcens" get secrets "$secretname" --output=yaml | yq ' .metadata = { "name": strenv(targetSecretName) }' | kubectl -n "$targetns" apply -f -

