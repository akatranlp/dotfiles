#!/usr/bin/env bash

themes=("nord" "catppuccin-mocha")

theme=$1

SCRIPT_DIR=$(cd "$(dirname "$0")"; pwd)

containsElement () {
  for theme in "${themes[@]}"; do [[ "$theme" == "$1" ]] && return 0; done
  return 1
}

printAvailableThemes () {
	for theme in "${themes[@]}"; do
		echo "- $theme"
	done
}

if ! containsElement "$theme"; then
	echo "Select one of the following themes"
	printAvailableThemes
	exit 1
fi

for script in $SCRIPT_DIR/../../scripts/change-theme/*; do
	$script $theme
done















